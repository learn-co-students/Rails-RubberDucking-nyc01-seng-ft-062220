<h1>New Student Form</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error|%>
       <p><%=error%></p>
    <% end %>
<% end %>

<%= form_for @student do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>

<%= f.label :mod %>
<%= f.text_field :mod %>
<br>

<%= f.submit %>
<% end%>