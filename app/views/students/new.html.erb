<h1>New Student Form</h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error_message| %>
        <p> <%= error_message  %></p><br>
<% end  %>
<% end %>

<%= form_for @student do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :mod %>
<%= f.number_field :mod%>
<%= f.submit %>

<% end %>