<% if flash[:user_error] %>
    <div><% id="error_explanation"%>
        <h2>
            <%= pluralize(flash[:user_error].count, "error")%>
            stopped this student from being saved
        </h2>

        <ul>
        <% flash[:user_error].each do |msg|  %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
<% end %>

<%= form_for @student do |f| %>

<label>Student Name:</label>
<%= f.text_field :name %><br><br>

<label>Student Mod:</label>
<%= f.number_field :mod, min: 1, max: 5 %><br><br>

<%= f.submit "Save Student" %>
<% end %>