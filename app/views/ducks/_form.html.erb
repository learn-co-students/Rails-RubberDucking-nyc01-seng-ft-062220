<% if @duck.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@duck.errors.count, "error") %>
      prohibited this duck from being saved:
    </h2>
 
    <ul>
    <% @duck.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @duck do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.collection_select :student_id, Student.all, :id, :name %><br>
    <%= f.submit %>
<% end %>