<h1>Edit Duck Form</h1>
<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
       <p><%=error%></p>
    <% end %>
<% end %>

<%= form_for (@duck) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>

    <%= f.label :student %>
    <%= f.collection_select :student_id, @students, :id, :name %>
    <br>

    <%= f.submit %>
  
<% end %> 