<h1>Edit Ducks</h1>


<%= form_for @duck do |f| %>
<strong>Duck Name:</strong> <%= f.text_field :name %><br>
<strong>Duck Description:</strong>  <%= f.text_area :description %><br>

<%= f.submit "Update"%>
<% end %>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>